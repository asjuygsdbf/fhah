<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_negocio2"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar venta"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"/>

        <TableLayout
            android:id="@+id/tableProductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1,2,3"
            android:layout_marginBottom="16dp">

            <TableRow
                android:background="#EEEEEE"
                android:padding="8dp"
                android:gravity="center_vertical">
                <TextView
                    android:text="Producto"
                    android:textStyle="bold"
                    android:gravity="center_vertical"/>
                <TextView
                    android:text="Cantidad"
                    android:textStyle="bold"
                    android:gravity="center_vertical"/>
                <TextView
                    android:text="Precio"
                    android:textStyle="bold"
                    android:gravity="center_vertical"/>
                <TextView
                    android:text="Total"
                    android:textStyle="bold"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"/>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Código:"
                    android:textAlignment="textEnd"
                    android:layout_marginEnd="8dp"/>

                <Spinner
                    android:id="@+id/spinnerCodigo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown"
                    android:dropDownVerticalOffset="45dp"
                    android:popupBackground="@android:color/white"
                    android:dropDownHeight="200dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Cantidad:"
                    android:textAlignment="textEnd"
                    android:layout_marginEnd="8dp"/>

                <EditText
                    android:id="@+id/etCantidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:background="@android:drawable/edit_text"
                    android:textColor="#000000"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvCantidadDisponible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cantidad disponible: 0"
                android:textColor="#757575"
                android:textSize="12sp"
                android:layout_marginStart="108dp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Precio:"
                    android:textAlignment="textEnd"
                    android:layout_marginEnd="8dp"/>

                <EditText
                    android:id="@+id/etPrecio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:background="@android:drawable/edit_text"
                    android:textColor="#000000"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnAgregar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agregar"
                android:layout_gravity="center"
                android:backgroundTint="#2196F3"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Nombres:"
                    android:textAlignment="textEnd"
                    android:layout_marginEnd="8dp"/>

                <EditText
                    android:id="@+id/etNombres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/edit_text"
                    android:textColor="#000000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="DNI:"
                    android:textAlignment="textEnd"
                    android:layout_marginEnd="8dp"/>

                <EditText
                    android:id="@+id/etDNI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="8"
                    android:background="@android:drawable/edit_text"
                    android:textColor="#000000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Método:"
                    android:textAlignment="textEnd"
                    android:layout_marginEnd="8dp"/>

                <EditText
                    android:id="@+id/etMetodo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/edit_text"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnRegresar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regresar"
                android:backgroundTint="#FF6B6B"
                android:layout_marginEnd="16dp"/>

            <Button
                android:id="@+id/btnAceptar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aceptar"
                android:backgroundTint="#4CAF50"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView> 