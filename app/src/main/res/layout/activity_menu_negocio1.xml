<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo_negocio1"
            android:layout_marginBottom="32dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:layout_marginBottom="32dp">

            <Button
                android:id="@+id/btnRegistrarProducto"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="Registrar\nproducto"
                android:textSize="16sp"
                android:backgroundTint="#2196F3"
                android:drawableTop="@android:drawable/ic_menu_edit"
                android:padding="16dp"/>

            <Button
                android:id="@+id/btnVerProductos"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="Ver\nproductos"
                android:textSize="16sp"
                android:backgroundTint="#4CAF50"
                android:drawableTop="@android:drawable/ic_menu_search"
                android:padding="16dp"/>

            <Button
                android:id="@+id/btnRegistrarVenta"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="Registrar\nventa"
                android:textSize="16sp"
                android:backgroundTint="#FF9800"
                android:drawableTop="@android:drawable/ic_menu_send"
                android:padding="16dp"/>

            <Button
                android:id="@+id/btnReporteVentas"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="Reporte de\nventas"
                android:textSize="16sp"
                android:backgroundTint="#9C27B0"
                android:drawableTop="@android:drawable/ic_menu_recent_history"
                android:padding="16dp"/>

        </GridLayout>

        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regresar"
            android:backgroundTint="#FF5252"/>

    </LinearLayout>
</ScrollView> 